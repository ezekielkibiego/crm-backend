datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Customer {
  id          Int    @id @default(autoincrement())
  name        String
  email       String @unique
  phone       String
  address     String
  companyName String

  Lead Lead[]
}


model Lead {
  id         Int         @id @default(autoincrement())
  customerId Int
  customer   Customer    @relation(fields: [customerId], references: [id])
  companyName String
  status     String
  interactions Interaction[]
}

model Interaction {
  id      Int    @id @default(autoincrement())
  leadId  Int
  lead    Lead   @relation(fields: [leadId], references: [id])
  type    String
  content String
  date    DateTime @default(now())
}
