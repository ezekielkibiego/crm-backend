datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Customer {
  id          Int    @id @default(autoincrement())
  name        String
  email       String @unique
  phone       String
  address     String
  companyName String

  Lead Lead[]
}


model Lead {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  phone         String
  address       String?
  companyName   String?
  leadStatus    String
  interactions  Interaction[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  Customer Customer[]
}

model Interaction {
  id        Int      @id @default(autoincrement())
  leadId    Int
  type      String
  details   String?
  timestamp DateTime @default(now())
  lead      Lead     @relation(fields: [leadId], references: [id])
}
